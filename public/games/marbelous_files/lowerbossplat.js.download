pc.script.create('lowerbossplat', function (app) {
    // Creates a new Lowerbossplat instance
    var Lowerbossplat = function (entity) {
        this.entity = entity;
    };

    Lowerbossplat.prototype = {
         initialize: function () {
            this.changePos = false;
            this.realY = 3;
            this.ai = app.context.root.findByName('minions');
        },
        elevate: function(){
           this.changePos = true; 
        },
        unelevate: function(){
           this.changePos = false; 
        },
        // Called every frame, dt is time in seconds since last update
        update: function (dt) {
            this.entity.collision.on('triggerenter',this.elevate,this);
            this.realY -= 0.1;
            if(this.changePos === true){
                this.realY = 3;
                this.ai.setPosition(0,-50,0);
                this.ai.rigidbody.syncEntityToBody();
            }
        }
    };

    return Lowerbossplat;
});