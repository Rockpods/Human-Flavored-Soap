pc.script.create('rotationalForce', function (app) {
    // Creates a new RotationalForce instance
    var RotationalForce = function (entity) {
        this.entity = entity;
    };

    RotationalForce.prototype = {
        // Called once after all resources are loaded and before the first update
        initialize: function () {
        },

        // Called every frame, dt is time in seconds since last update
        update: function (dt) {
            this.bPos = app.context.root.findByName('ball').getPosition();
            this.kPos = this.entity.getPosition();
            this.opp = this.bPos.x - this.kPos.x;
            this.adj = this.kPos.z - this.bPos.z;
            this.full = this.adj / this.opp;
            this.rotation = Math.atan(this.full);
            this.rotation = this.rotation * 180 / Math.PI;
            if(this.opp <= 0){
                this.rotation += 180;
            }
            this.rotation += 90;
            this.entity.setEulerAngles(0,this.rotation,0);
        }
    };

    return RotationalForce;
});