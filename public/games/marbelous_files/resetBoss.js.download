pc.script.create('resetBoss', function (app) {
    // Creates a new ResetBoss instance
    var ResetBoss = function (entity) {
        this.entity = entity;
    };

    ResetBoss.prototype = {
        // Called once after all resources are loaded and before the first update
        initialize: function () {
            this.boss = app.context.root.findByName('boss1');
        },
        
        bossFunction: function(){
            this.boss = app.context.root.findByName('boss1');
            this.boss.setLocalPosition(0,3.6671,2);
            this.boss.rigidbody.syncEntityToBody();
            this.boss.rigidbody.linearVelocity = pc.Vec3.ZERO;
            this.boss.rigidbody.angularVelocity = pc.Vec3.ZERO;
        },
        // Called every frame, dt is time in seconds since last update
        update: function (dt) {
            this.ball = app.context.root.findByName('ball').getPosition();
            this.bossPos = app.context.root.findByName('boss1').getPosition();
            if(this.ball.y <= 0.5){
                this.bossFunction();
            }
        }
    };

    return ResetBoss;
});