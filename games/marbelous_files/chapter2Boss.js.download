pc.script.create('chapter2Boss', function (app) {
    // Creates a new Chapter2Boss instance
    var Chapter2Boss = function (entity) {
        this.entity = entity;
    };

    Chapter2Boss.prototype = {
        // Called once after all resources are loaded and before the first update
        initialize: function () {
        },

        // Called every frame, dt is time in seconds since last update
        update: function (dt) {
            this.bossPos = this.entity.getPosition();
            this.ballPos = app.context.root.findByName('ball').getPosition();
            if(this.ballPos.y <= 0.5){
                this.entity.setPosition(0,3.6,-3);
                this.entity.rigidbody.syncEntityToBody();
            }
            if(this.bossPos.y <= 0.5){
                this.entity.setPosition(0,3.6,-3);
                this.entity.rigidbody.syncEntityToBody();
                app.context.root.findByName('soundeffects').audiosource.play('Effect');
                app.context.root.findByName('defaultCamera').script.Menu.levelUp(21);
                app.context.root.findByName('ball').script.teleportable.menu();
            }
        }
    };

    return Chapter2Boss;
});